<div class="bg-white/90 backdrop-blur rounded-2xl shadow-xl p-8 max-w-sm mx-auto animate-fade-in relative z-10">
  <% if user.avatar.attached? %>
    <div class="flex justify-center mb-5">
      <%= image_tag user.avatar.variant(resize_to_limit: [120, 120]), class: "rounded-full shadow-lg border-4 border-[#ED4F30]/20" %>
    </div>
  <% end %>

  <h3 class="text-2xl font-extrabold text-center mb-1 text-[#ED4F30] flex items-center justify-center gap-2">
    <%= user.name %>
    <% if user.verified? %>
      <i class="fas fa-check-circle text-[#EFDE56] ml-1" title="Verified Student"></i>
    <% end %>
  </h3>

  <p class="text-center text-[#232323] mb-4 font-medium">
    <%= user.school %>
    <% if user.major.present? %>
      <span class="text-[#A1A7C2]">â€“ <%= user.major %></span>
    <% end %>
  </p>

  <div class="space-y-2 text-sm text-[#232323]">
    <% if user.year_in_school.present? %>
      <div class="flex items-center gap-2">
        <i class="fas fa-graduation-cap text-[#ED4F30]"></i>
        <span><strong>Year:</strong> <%= user.year_in_school %></span>
      </div>
    <% end %>

    <% if user.sleep_schedule.present? %>
      <div class="flex items-center gap-2">
        <i class="fas fa-bed text-[#ED4F30]"></i>
        <span><strong>Sleep:</strong> <%= user.sleep_schedule.titleize %></span>
      </div>
    <% end %>

    <% unless user.clean.nil? %>
      <div class="flex items-center gap-2">
        <i class="fas fa-broom <%= user.clean ? 'text-[#ED4F30]' : 'text-gray-400' %>"></i>
        <span><strong>Clean:</strong> <%= user.clean ? "Clean" : "Messy" %></span>
      </div>
    <% end %>

    <% if user.hobbies.present? %>
      <div class="flex items-center gap-2">
        <i class="fas fa-heart text-[#EFDE56]"></i>
        <span><strong>Hobbies:</strong> <%= user.hobbies %></span>
      </div>
    <% end %>

    <% if user.guest_policy.present? %>
      <div class="flex items-center gap-2">
        <i class="fas fa-user-friends text-[#ED4F30]"></i>
        <span><strong>Guests:</strong> <%= user.guest_policy %></span>
      </div>
    <% end %>

    <% unless user.smoking.nil? %>
      <div class="flex items-center gap-2">
        <i class="fas <%= user.smoking ? 'fa-smoking text-[#ED4F30]' : 'fa-smoking-ban text-gray-400' %>"></i>
        <span><strong>Smoking:</strong> <%= user.smoking ? "Smoker" : "Non-Smoker" %></span>
      </div>
    <% end %>

    <% unless user.pets.nil? %>
      <div class="flex items-center gap-2">
        <i class="fas <%= user.pets ? 'fa-dog text-[#EFDE56]' : 'fa-ban text-gray-400' %>"></i>
        <span><strong>Pets:</strong> <%= user.pets ? "Has Pets" : "No Pets" %></span>
      </div>
    <% end %>
  </div>
</div>
