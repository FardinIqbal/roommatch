<div class="flex <%= message.sender == local_user ? 'justify-end' : 'justify-start' %> mb-2">
  <div class="
    px-4 py-2 rounded-2xl shadow
    max-w-sm
    <%= message.sender == local_user ?
                        'bg-[#ED4F30] text-white rounded-br-sm' :
                        'bg-white/80 backdrop-blur text-[#232323] border border-[#ED4F30]/10 rounded-bl-sm'
  %>
    ">
    <div class="whitespace-pre-line break-words">
      <%= message.body.presence || '...' %>
    </div>
    <p class="text-xs mt-1 <%= message.sender == local_user ? 'text-[#EFDE56]/80' : 'text-[#A1A7C2]' %> text-right">
      <%= time_ago_in_words(message.created_at) %> ago
    </p>
  </div>
</div>
