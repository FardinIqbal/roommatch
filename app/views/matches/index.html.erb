<div class="max-w-md mx-auto mt-10 p-8 bg-white/90 backdrop-blur shadow-xl rounded-2xl animate-fade-in relative z-10">
  <h2 class="text-2xl font-extrabold mb-6 text-center text-[#ED4F30] drop-shadow">Your Matches</h2>

  <% if @matches.any? %>
    <% @matches.each do |match| %>
      <%= render partial: "match_card", locals: { match: match } %>
    <% end %>
  <% else %>
    <p class="text-center text-[#A1A7C2] font-semibold">You have no matches yet. Keep swiping!</p>
  <% end %>
</div>
